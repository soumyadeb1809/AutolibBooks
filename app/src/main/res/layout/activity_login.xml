<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sinhaparul.autolibbooks.activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/library"
        android:scaleType="fitXY"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:alpha="0.9"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_library_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/logo"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/autolib"
        android:id="@+id/label"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grp_roll"
        android:layout_marginTop="36dp"
        android:layout_below="@id/label"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@drawable/et_back"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_user"
            />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:inputType="textEmailAddress"
            android:hint="Email Address"
            android:background="@null"
            android:layout_above="@+id/password"
            android:layout_centerHorizontal="true" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grp_pass"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_back"
        android:layout_below="@+id/grp_roll"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock"
            />



        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="Password"
            />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/grp_pass"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_login"
        android:text="Login to your account"
        android:backgroundTint="@color/pink"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account yet?"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="36dp"
        android:id="@+id/txt"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/txt"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="8dp"
        android:id="@+id/btn_register"
        android:text="Register"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/colorPrimary"
        />

</RelativeLayout>
